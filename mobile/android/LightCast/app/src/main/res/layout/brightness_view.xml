<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_button_width"
        android:id="@+id/brightness_label"
        android:gravity="center_vertical"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/brightness_value"/>

    <ImageView
        android:id="@+id/button_close"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_width"
        android:src="@drawable/ic_content_clear"
        android:layout_alignTop="@+id/brightness_label"
        android:layout_alignParentEnd="true" />
    <SeekBar
        android:layout_margin="10dp"
        android:id="@+id/brightness_seek"
        android:layout_width="match_parent"
        android:progress="50"
        android:max="100"
        android:layout_below="@id/brightness_label"
        android:layout_height="wrap_content" />

</RelativeLayout>